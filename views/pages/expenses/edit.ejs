<%- include('../../partials/header') %>

<div class="max-w-4xl mx-auto px-6 sm:px-8 py-12">
  <div class="flex items-center mb-8">
    <a href="/expenses" class="text-primary-600 hover:text-primary-700 mr-3 transition-colors duration-200">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
    </a>
    <h1 class="text-3xl font-bold text-gray-900">Edit Expense</h1>
  </div>

  <div class="form-container bg-white rounded-xl shadow-lg p-8">
    <!-- Animated background gradient -->
    <div class="form-bg"></div>
    <form action="/expenses/edit/<%= expense._id %>" method="POST" class="form-animate-in">
      <div class="form-grid gap-6">
        <div class="form-group form-field-animate form-field-animate-delay-1">
          <label for="amount" class="form-label block text-sm font-medium text-gray-700 mb-2">Amount (â‚¹)</label>
          <div class="form-icon-left relative">
            <span class="form-icon absolute left-3 top-1/2 transform -translate-y-1/2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </span>
            <input
              type="number"
              id="amount"
              name="amount"
              class="form-input text-black w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors duration-200"
              placeholder="Enter amount"
              min="0"
              step="0.01"
              value="<%= expense.amount %>"
              required
            />
          </div>
        </div>

        <div class="form-group form-field-animate form-field-animate-delay-2">
          <label for="category" class="form-label block text-sm font-medium text-gray-700 mb-2">Category</label>
          <div class="form-icon-left relative">
            <span class="form-icon absolute left-3 top-1/2 transform -translate-y-1/2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
              </svg>
            </span>
            <select id="category" name="category" class="form-select text-black w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors duration-200" required>
              <option value="">Select a category</option>
              <option value="rent" <%= expense.category === 'rent' ? 'selected' : '' %>>Rent</option>
              <option value="mortgage" <%= expense.category === 'mortgage' ? 'selected' : '' %>>Mortgage</option>
              <option value="utilities" <%= expense.category === 'utilities' ? 'selected' : '' %>>Utilities</option>
              <option value="groceries" <%= expense.category === 'groceries' ? 'selected' : '' %>>Groceries</option>
              <option value="healthcare" <%= expense.category === 'healthcare' ? 'selected' : '' %>>Healthcare</option>
              <option value="insurance" <%= expense.category === 'insurance' ? 'selected' : '' %>>Insurance</option>
              <option value="education" <%= expense.category === 'education' ? 'selected' : '' %>>Education</option>
              <option value="transportation" <%= expense.category === 'transportation' ? 'selected' : '' %>>Transportation</option>
              <option value="dining" <%= expense.category === 'dining' ? 'selected' : '' %>>Dining</option>
              <option value="entertainment" <%= expense.category === 'entertainment' ? 'selected' : '' %>>Entertainment</option>
              <option value="shopping" <%= expense.category === 'shopping' ? 'selected' : '' %>>Shopping</option>
              <option value="travel" <%= expense.category === 'travel' ? 'selected' : '' %>>Travel</option>
              <option value="gifts" <%= expense.category === 'gifts' ? 'selected' : '' %>>Gifts</option>
              <option value="subscriptions" <%= expense.category === 'subscriptions' ? 'selected' : '' %>>Subscriptions</option>
              <option value="other" <%= expense.category === 'other' ? 'selected' : '' %>>Other</option>
            </select>
          </div>
        </div>

        <div class="form-group md:col-span-2 form-field-animate form-field-animate-delay-3">
          <label for="description" class="form-label block text-sm font-medium text-gray-700 mb-2">Description (optional)</label>
          <div class="form-icon-left relative">
            <span class="form-icon absolute left-3 top-4">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7"></path>
              </svg>
            </span>
            <textarea
              id="description"
              name="description"
              class="form-textarea text-black w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors duration-200"
              placeholder="Enter a description"
              rows="3"
            ><%= expense.description %></textarea>
          </div>
        </div>

        <div class="form-group form-field-animate form-field-animate-delay-4">
          <label for="date" class="form-label block text-sm font-medium text-gray-700 mb-2">Date</label>
          <div class="form-icon-left relative">
            <span class="form-icon absolute left-3 top-1/2 transform -translate-y-1/2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </span>
            <input
              type="date"
              id="date"
              name="date"
              class="form-date-input text-black w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors duration-200"
              value="<%= new Date(expense.date).toISOString().split('T')[0] %>"
              required
            />
          </div>
        </div>

        <div class="form-group form-field-animate form-field-animate-delay-5" id="expense-type-container">
          <label class="form-label block text-sm font-medium text-gray-700 mb-2">Type</label>
          <div class="mt-2 flex items-center space-x-4">
            <div id="expense-type" class="px-4 py-2 text-sm font-medium rounded-full bg-gray-100 text-gray-800 transition-all duration-300">
              <%= expense.type === 'need' ? 'Need' : 'Want' %>
            </div>
          </div>
          <p class="form-hint mt-2 text-sm text-gray-500">AI will automatically classify your expense as a need or want.</p>
        </div>
      </div>

      <div class="form-buttons mt-8 flex justify-end space-x-4">
        <a href="/expenses" class="form-cancel-btn px-6 py-3 rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200 transition-colors duration-200">Cancel</a>
        <button type="submit" class="form-submit-btn px-6 py-3 rounded-lg bg-primary-600 text-white hover:bg-primary-700 transition-colors duration-200">Update Expense</button>
      </div>
    </form>
  </div>
</div>

<%- include('../../partials/footer') %>
