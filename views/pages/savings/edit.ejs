<%- include('../../partials/header') %>

<div class="max-w-4xl mx-auto px-6 sm:px-8 py-12">
  <div class="flex items-center mb-8">
    <a href="/savings" class="text-primary-600 hover:text-primary-700 mr-3 transition-colors duration-200">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
    </a>
    <h1 class="text-3xl font-bold text-gray-900">Edit Savings Goal</h1>
  </div>

  <div class="form-container bg-white rounded-xl shadow-lg p-8">
    <!-- Animated background gradient -->
    <div class="form-bg"></div>
    <form action="/savings/edit/<%= savingsGoal._id %>" method="POST" class="form-animate-in">
      <div class="form-grid gap-6">
        <div class="form-group md:col-span-2 form-field-animate form-field-animate-delay-1">
          <label for="name" class="form-label block text-sm font-medium text-gray-700 mb-2">Goal Name</label>
          <div class="form-icon-left relative">
            <span class="form-icon absolute left-3 top-1/2 transform -translate-y-1/2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
              </svg>
            </span>
            <input
              type="text"
              id="name"
              name="name"
              class="form-input text-black w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors duration-200"
              placeholder="e.g., Emergency Fund, Vacation, New Laptop"
              value="<%= savingsGoal.name %>"
              required
            />
          </div>
        </div>

        <div class="form-group form-field-animate form-field-animate-delay-2">
          <label for="targetAmount" class="form-label block text-sm font-medium text-gray-700 mb-2">Target Amount (₹)</label>
          <div class="form-icon-left relative">
            <span class="form-icon absolute left-3 top-1/2 transform -translate-y-1/2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 8h6m-5 0a3 3 0 110 6H9l3 3m-3-6h6m6 1a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </span>
            <input
              type="number"
              id="targetAmount"
              name="targetAmount"
              class="form-input text-black w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors duration-200"
              placeholder="Enter target amount"
              min="1"
              step="1"
              value="<%= savingsGoal.targetAmount %>"
              required
            />
          </div>
        </div>

        <div class="form-group form-field-animate form-field-animate-delay-3">
          <label for="currentAmount" class="form-label block text-sm font-medium text-gray-700 mb-2">Current Amount (₹)</label>
          <div class="form-icon-left relative">
            <span class="form-icon absolute left-3 top-1/2 transform -translate-y-1/2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </span>
            <input
              type="number"
              id="currentAmount"
              name="currentAmount"
              class="form-input text-black w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors duration-200"
              placeholder="Enter current amount (if any)"
              min="0"
              step="1"
              value="<%= savingsGoal.currentAmount %>"
            />
          </div>
        </div>

        <div class="form-group md:col-span-2 form-field-animate form-field-animate-delay-4">
          <label for="deadline" class="form-label block text-sm font-medium text-gray-700 mb-2">Target Date</label>
          <div class="form-icon-left relative">
            <span class="form-icon absolute left-3 top-1/2 transform -translate-y-1/2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </span>
            <input
              type="date"
              id="deadline"
              name="deadline"
              class="form-date-input text-black w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors duration-200"
              value="<%= new Date(savingsGoal.deadline).toISOString().split('T')[0] %>"
              required
            />
          </div>
        </div>
      </div>

      <div class="form-buttons mt-8 flex justify-end space-x-4">
        <a href="/savings" class="form-cancel-btn px-6 py-3 rounded-lg bg-gray-100 text-gray-700 hover:bg-gray-200 transition-colors duration-200">Cancel</a>
        <button type="submit" class="form-submit-btn px-6 py-3 rounded-lg bg-primary-600 text-white hover:bg-primary-700 transition-colors duration-200">Update Savings Goal</button>
      </div>
    </form>
  </div>
</div>

<%- include('../../partials/footer') %>
